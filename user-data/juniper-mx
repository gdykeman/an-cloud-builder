#junos-config
groups {
    global {
        system {
            host-name HOSTNAME;
            services {
                ssh {
                    root-login deny-password;
                }
            }
            login {
                user jnpr {
                    uid 2000;
                    class super-user;
                    authentication {
                        ssh-rsa "SSHRSAKEY"; ## SECRET-DATA
                    }
                }
            }
            syslog {
                user * {
                    any emergency;
                }
                file messages {
                    any notice;
                    authorization info;
                }
                file interactive-commands {
                    interactive-commands any;
                }
            }
        }
        interfaces {
            fxp0 {
                unit 0 {
                    family inet {
                        address FXP0ADDR;
                    }
                }
            }
        }
        routing-options {
            static {
                route 0.0.0.0/0 {
                    next-hop GATEWAY;
                    retain;
                    no-readvertise;
                }
            }
        }
    }
}
apply-groups global;
